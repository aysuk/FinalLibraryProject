@model IEnumerable<LibraryProject.Models.Book>

@{
    ViewData["Title"] = "Kütüphane";
}

            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> Kitap Listesi</h4>
                <p>
                    <a asp-action="Create" class="btn btn-success btn-sm" style="margin-left: 10px;margin-top:10px;">Yeni Kitap Ekle</a>
                </p>
                <hr>
                <thead>
                    <tr>
                        <th><i class="fa fa-bullhorn"></i> @Html.DisplayNameFor(model => model.Name)</th>
                        <th class="hidden-phone"><i class="fa fa-question-circle"></i> @Html.DisplayNameFor(model => model.Author)</th>
                        <th><i class="fa fa-bookmark"></i> @Html.DisplayNameFor(model => model.PublishDate)</th>
                        <th><i class=" fa fa-edit"></i> @Html.DisplayNameFor(model => model.Publisher)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.CreatedDate)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PublishDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Publisher)
                            </td>
                            <td class="text-center">
                                @item.CreatedDate.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <a asp-action="AddBookRecord" asp-route-id="@item.Id">Kayıt Ekle</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                            </td>
                        </tr>
                    }
