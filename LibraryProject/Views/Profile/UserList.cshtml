@model List<UserListViewModel>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<table class="table table-striped table-advance table-hover">
    <h4><i class="fa fa-angle-right"></i> Kullanıcı Listesi</h4>
    <hr>
    <thead>
        <tr>
            <th> Ad Soyad</th>
            <th> E-posta</th>
            <th> Kullanıcı Tipi</th>
            <th> İşlemler </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <a asp-action="UserProfile" asp-route-id="@user.UserBasic.Id"> @user.UserBasic.FirstName @user.UserBasic.LastName </a>
                </td>
                <td> @user.UserBasic.Email </td>
                <td>
                    @if (user.IsReader)
                    {
                        <span class="label label-info label-mini">Okuyucu</span>
                    }
                    else
                    {
                        <span class="label label-warning label-mini">Dinleyici</span>
                    }
                </td>
                <td><a asp-controller="Messages" asp-action="ComposeMessage" asp-route-id="@user.UserBasic.Id" class="btn btn-sm btn-theme"><i class="fa fa-envelope"></i> Mesaj Gönder</a></td>
            </tr>
        }
    </tbody>
</table>